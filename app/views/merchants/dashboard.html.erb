<h3>Merchant Dashboard</h3>

<div class="merch-dash-tools row">
  <div class="col-md-3">
    <h5><%= link_to "Add Product", new_merchant_product_path(params[:merchant_id]), class: "btn btn-primary" %></h5>
    <h5><%= link_to "Add Category", new_category_path, class: "btn btn-primary" %></h5>
  </div>
  <div class="col-md-3 col-md-offset-6">
    <div>
      <h5><%= link_to "Orders", merchant_orders_path(params[:merchant_id]), class: "btn btn-primary" %></h5>
    </div>
    <div>
      <h4>Revenue: <%= number_to_currency(@revenue) %></h4>
    </div>
  </div>
</div>

<h4>Products</h4>
  <table class="table">
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product.id) %></td>
        <td><%= product.active ? "ACTIVE" : "INACTIVE" %></td>
        <td><%= link_to "Edit", edit_merchant_product_path(product.merchant_id, product.id), class: "btn btn-default" %></td>
        <td><%= link_to "Change status", product_path(product.id), method: :patch, class: "btn btn-default" %></td>
        <td><%= link_to "X", merchant_product_path(product.merchant_id, product.id), method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </table>
